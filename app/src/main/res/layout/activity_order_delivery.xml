<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f6f6f6"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="10dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单发货"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:text="会员中心"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="订单号："
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="#00A3D9"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_btn_write5"
                android:orientation="vertical">
                <com.bbld.warehouse.widget.ZListview
                    android:id="@+id/lv_fahuo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ></com.bbld.warehouse.widget.ZListview>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_write5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:padding="10dp">
                    <TextView
                        android:textColor="#333333"
                        android:text="渠道："
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvChannelName"
                        android:layout_marginLeft="10dp"
                        android:text="--"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"

                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:padding="10dp">


                    <TextView
                        android:textColor="#333333"
                        android:text="经销商："
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvDealerName"
                        android:layout_marginLeft="10dp"
                        android:text="--"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"

                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:padding="10dp">



                    <TextView
                        android:textColor="#333333"
                        android:text="联系人："
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_name_phone"
                        android:layout_marginLeft="10dp"
                        android:text="--"
                        android:textColor="#ff4d4d"
                        android:textSize="14sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/dianhua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"

                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:padding="10dp">



                    <TextView
                        android:textColor="#333333"
                        android:text="地址："
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginLeft="10dp"
                        android:text="--"
                        android:textColor="#ff4d4d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_btn_write5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="备注："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDealerRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="经销商备注"
                    android:textColor="#666666"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tvHeadRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="上级备注"
                    android:textColor="#666666"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="发货单备注"
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSaoMaSH"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvWrongCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="不匹配条码"/>
                <com.bbld.warehouse.widget.ZListview
                    android:id="@+id/lvNoPP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </com.bbld.warehouse.widget.ZListview>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:text="上传图片"/>
                <GridLayout
                    android:id="@+id/glWrong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:useDefaultMargins="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:id="@+id/iv01"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:onClick="addImage"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_addpic_focused"/>
                    <ImageView
                        android:id="@+id/iv02"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:onClick="addImage"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_addpic_focused"/>
                    <ImageView
                        android:id="@+id/iv03"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:visibility="gone"
                        android:onClick="addImage"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_addpic_focused"/>
                    <ImageView
                        android:id="@+id/iv04"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:onClick="addImage"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_addpic_focused"/>
                    <ImageView
                        android:id="@+id/iv05"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:onClick="addImage"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_addpic_focused"/>
                    <ImageView
                        android:id="@+id/iv06"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:onClick="addImage"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_addpic_focused"/>
                    <ImageView
                        android:id="@+id/iv07"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:onClick="addImage"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_addpic_focused"/>
                    <ImageView
                        android:id="@+id/iv08"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:onClick="addImage"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_addpic_focused"/>
                    <ImageView
                        android:id="@+id/iv09"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:onClick="addImage"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_addpic_focused"/>
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发货出库"
        android:textSize="18sp"
        android:background="#00A3D9"
        android:textColor="#ffffff"/>
</LinearLayout>